<% include ../partials/header %>
  
  <div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpRoom!</h1>
            <p>View our hand-picked rooms from all over the world</p>
            <p>
                <a class="btn btn-primary btn-large" href="/rooms/new">Add New Room</a>
            </p>
        </div>
    </header>
    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        <% rooms.forEach(function(room){ %>
            <div class="col-md-3 col-sm-6">
              <div class="thumbnail">
                <img src="<%= room.image  %>">
                <div class="caption">
                  <h4><%= room.name %></h4>
                  <p>
                    <a href="/rooms/<%= room._id %>" class="btn btn-primary">More Info</a>
                  </p>
                </div>
              </div>
            </div>
        <% }); %>
    </div>
  </div>

<% include ../partials/footer %>
